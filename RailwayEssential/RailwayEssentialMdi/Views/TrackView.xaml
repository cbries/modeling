<UserControl x:Class="RailwayEssentialMdi.Views.TrackView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:railwayEssentialWeb="clr-namespace:RailwayEssentialWeb;assembly=RailwayEssentialWeb"
             mc:Ignorable="d" Initialized="TrackView_OnInitialized" DataContextChanged="TrackView_OnDataContextChanged"
             d:DesignHeight="250" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <DockPanel Grid.Row="0" HorizontalAlignment="Right">
            <Button Content="0" Height="20" Width="20" Margin="0,0,5,0" Command="{Binding ZoomResetCommand}"/>
            <Button Content="+" Height="20" Width="20" Margin="0,0,5,0" Command="{Binding ZoomPlusCommand}"/>
            <Button Content="-" Height="20" Width="20" Margin="0,0,5,0" Command="{Binding ZoomMinusCommand}"/>
        </DockPanel>
        
        <railwayEssentialWeb:TrackViewer Name="trackViewer" Grid.Row="1"/>
    </Grid>
</UserControl>
