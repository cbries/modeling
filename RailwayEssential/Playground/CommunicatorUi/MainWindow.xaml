<Window x:Class="CommunicatorUi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommunicatorUi"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="1024"
        Initialized="MainWindow_OnInitialized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0">
            <TextBox Name="TxtCommand" KeyDown="TxtCommand_OnKeyDown"/>
            <Button Name="CmdSend" Content="Send" Click="CmdSend_OnClick"/>
            <Button Name="CmdClear" Click="CmdClear_OnClick"/>
            
            <Button Name="CmdReq1" Content="Request: baseobject" Click="CmdReq1_OnClick" Margin="0,10,0,0"/>
            <Button Name="CmdReq26" Content="Request: feedback-manager (S88)" Click="CmdReq26_OnClick"/>
            <Button Name="CmdReq5" Content="Request: programmingtrack" Click="CmdReq5_OnClick"/>
            <Button Name="CmdReq100" Content="Request: feedback-module" Click="CmdReq100_OnClick"/>
            <Button Name="CmdReq10" Content="Request: loco-manager" Click="CmdReq10_OnClick"/>
            <Button Name="CmdReq11" Content="Request: accessory-manager" Click="CmdReq11_OnClick"/>

            <Button Name="CmdReqAll" Content="Request: ALL" Click="CmdReqAll_OnClick" Margin="0,10,0,0"/>
            
            <DockPanel Margin="0,10,0,0" HorizontalAlignment="Stretch">
                <Label Content="Addr:" VerticalAlignment="Center"/>
                <TextBox Name="TxtLocAddr" Width="50" VerticalAlignment="Center"/>
                <Slider Name="SliderSpeed" Maximum="100" SmallChange="1" VerticalAlignment="Center" ValueChanged="SliderSpeed_OnValueChanged"/>
            </DockPanel>
            <DockPanel HorizontalAlignment="Center">
                <ToggleButton Content="F0" Name="CmdF0" Margin="1,1,1,1" Click="CmdF_OnClick"/>
                <ToggleButton Content="F1" Name="CmdF1" Margin="1,1,1,1" Click="CmdF_OnClick"/>
                <ToggleButton Content="F2" Name="CmdF2" Margin="1,1,1,1" Click="CmdF_OnClick"/>
                <ToggleButton Content="F3" Name="CmdF3" Margin="1,1,1,1" Click="CmdF_OnClick"/>
                <ToggleButton Content="F4" Name="CmdF4" Margin="1,1,1,1" Click="CmdF_OnClick"/>
                <ToggleButton Content="F5" Name="CmdF5" Margin="1,1,1,1" Click="CmdF_OnClick"/>
                <ToggleButton Content="F6" Name="CmdF6" Margin="1,1,1,1" Click="CmdF_OnClick"/>
            </DockPanel>
        </StackPanel>
        
        <DockPanel Grid.Column="1">
            <TextBox Name="TxtLogging" TextWrapping="NoWrap" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" FontSize="14"></TextBox>
        </DockPanel>
    </Grid>
</Window>
